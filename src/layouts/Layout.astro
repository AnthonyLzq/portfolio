---
import { SEO } from 'astro-seo'

import Header from '../components/Header.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <SEO
      title={title}
      description='Anthony Luzqui単os - Full Stack Developer'
      openGraph={{
        basic: {
          title: 'Anthony Luzqui単os - Full Stack Developer',
          url: 'anthonylz.dev',
          type: 'website',
          image: 'https://avatars.githubusercontent.com/u/43073718?v=4'
        },
        optional: {
          description:
            "I'm a full stack developer with a passion for building great products. I have experience building web applications with TypeScript, React and Node.js.",
          locale: 'en_US'
        },
        image: {
          alt: 'Anthony Luzqui単os - Full Stack Developer'
        }
      }}
      twitter={{
        title: 'Anthony Luzqui単os - Full Stack Developer',
        creator: '@Anthony_Lzq',
        card: 'summary_large_image',
        site: 'https://anthonylz.dev',
        description:
          "I'm a full stack developer with a passion for building great products. I have experience building web applications with TypeScript, React and Node.js.",
        image: 'https://avatars.githubusercontent.com/u/43073718?v=4'
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: 'icon', href: '/favicon.ico' }]
      }}
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <style is:global>
      :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #da62c4 30%,
          white 60%
        );
      }

      html {
        font-family: system-ui, sans-serif;
        background-color: #f6f6f6;
      }

      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }

      body {
        margin: 0;
        padding: 0;
        background-color: #f6f6f6;
      }

      main {
        width: 100%;
        box-sizing: border-box;
        padding: 1rem 2rem;
      }
    </style>
  </body>
</html>
