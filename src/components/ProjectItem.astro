---
import Icon from './Icon.astro'
import type { Tech } from '../utils'

export interface Props {
  title: string
  description: string
  image: string
  url: string
  tech: Tech[]
  objectFit?: 'cover' | 'contain' | 'fill' | 'none' | 'scale-down'
}

const {
  title,
  description,
  image,
  url,
  tech,
  objectFit = 'cover'
} = Astro.props
---

<article class='container'>
  <a href={url} target='_blank'><img src={image} alt={title} /></a>
  <section>
    <h3>{title}</h3>
    <div>
      <p>{description}</p>
      <h4>Tech stack:</h4>
      <div id='stack_container'>
        {tech.map(t => <Icon href={t.url} image={t.image} name={t.name} />)}
      </div>
    </div>
  </section>
</article>

<style define:vars={{ objectFit }}>
  .container {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    width: 100%;
    border: 1px solid lightblue;
    border-radius: 20px;
    align-items: center;
  }

  .container section {
    box-sizing: border-box;
    width: 100%;
    padding: 0 1rem 0.5rem;
  }

  .container > a {
    width: 100%;
    height: 180px;
  }

  .container > a > img {
    width: 100%;
    height: 100%;
    object-fit: var(--objectFit);
    border-radius: 20px 20px 0px 0px;
  }

  div#stack_container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  @media (max-width: 400px) {
    .container > a {
      height: 160px;
    }
  }
</style>
