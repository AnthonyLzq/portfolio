---
export interface Props {
  title: string
  description: string
  image: string
  url: string
}

const { title, description, image, url } = Astro.props
---

<article class='container'>
  <img src={image} alt={title} />
  <section>
    <h3>{title}</h3>
    <div>
      <p>{description}</p>
      <p>Check it <a href={url}>here</a>.</p>
    </div>
  </section>
</article>

<style>
  .container {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    width: 100%;
    border: 1px solid lightblue;
    border-radius: 20px;
    align-items: center;
  }

  .container section {
    box-sizing: border-box;
    width: 100%;
    padding: 1rem;
  }

  .container img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 20px 20px 0px 0px;
  }

  a {
    text-decoration: none;
    color: #000;
    cursor: pointer;
  }
</style>
