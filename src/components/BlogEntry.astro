---
export type Props = {
  title: string
  pubDate: string
  description: string
  minutesRead: string
  tags: string[]
  url?: string
}

const { title, pubDate, description, minutesRead, tags, url } = Astro.props
---

<article>
  <a href={url}>
    <h1>{title}</h1>
    <p>{description}</p>
    <div>
      <span>
        {
          new Intl.DateTimeFormat('en-US', {
            month: 'long',
            day: 'numeric',
            year: 'numeric'
          }).format(new Date(pubDate))
        }
      </span> &#8226;
      <span>{minutesRead}</span>
    </div>
    <div class='tags-container'>
      {tags.map(tag => <span class='tag'>{tag}</span>)}
    </div>
  </a>
</article>

<style>
  article {
    padding: 1rem;
    border: 1px solid lightblue;
    border-radius: 20px;
  }

  h1 {
    font-size: 1.5rem;
    margin: 0;
  }

  h1::after {
    margin-top: 12px;
    content: '';
    display: block;
    width: 25px;
    height: 4px;
    background-color: #000;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  div {
    color: #333;
  }

  .tags-container {
    display: flex;
    flex-wrap: wrap;
    margin-top: 12px;
    gap: 8px;
  }

  .tag {
    padding: 4px 8px;
    border-radius: 4px;
    background-color: lightblue;
  }
</style>
