---
export interface Props {
  href: string
  image: string
  name: string
}

const { href, image, name } = Astro.props
---

<a href={href} target='_blank'>
  <img src={image} alt={name} height='50px' />
</a>

<style>
  a {
    text-decoration: none;
    color: #000;
    cursor: pointer;
  }

  img {
    margin: 0.5rem;
    border-radius: 4px;
  }
</style>
